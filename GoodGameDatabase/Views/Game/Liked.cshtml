@using GoodGameDatabase.Web.ViewModels.Game;
@model dynamic

@{
    ViewData["Title"] = "Liked games";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        @if (Model.ViewModels.Count > 0)
        {
            <div class="flex flex-col-reverse h-full">
                <partial name="_PaginationPartial" model="@Model.PageViewModel" />
            </div>
            <div class="w-full flex flex-row flex-wrap justify-content-center">
                @foreach (var game in Model.ViewModels)
                {
                    <partial name="_GamePartial" model="@game" />
                }
            </div>
        }
        else
        {
            <p>There are no games available.</p>
        }
    </div>
</body>
</html>