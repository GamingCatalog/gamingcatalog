@using GoodGameDatabase.Web.ViewModels.Game;
@using GoodGameDatabase.Web.ViewModels.Discussion;
@model dynamic

@{
    ViewData["Title"] = "Home Page";
}

<div class="flex flex-row space-x-4 h-full max-h-full w-full max-w-full overflox-hidden">
    @*left side*@
    <div class="w-8/12 h-full max-h-full flex flex-col space-y-6 overflox-hidden">
        <div class="h-4/6 max-x-4/6 w-full max-w-full flex flex-col overflox-hidden">
            <img class="h-full max-h-full w-full max-w-full object-fill object-center" src="@Model.BestGame.ImageUrl"/>
        </div>

        <div class="border-5 border-green-500 h-2/6 max-x-2/6 w-full max-w-full flex flex-row space-x-2 overflox-hidden">

            @foreach (AllDiscussionViewModel discussion in Model.BestThreeDiscussions)
            {
                <partial name="_HomeDiscussionPartial" model="@discussion" />
            }
        </div>
    </div>

    @*right side*@
    <div class="w-4/12 h-full max-h-full flex flex-col space-y-6 overflox-hidden">
        <div class="h-full max-h-full w-full max-w-full flex flex-col space-y-6 overflox-hidden">

            @foreach (BestSixGameViewModel game in Model.BestSixGames)
            {
                <partial name="_BestSixPartial" model="@game" />
            }
        </div>
    </div>
</div>
